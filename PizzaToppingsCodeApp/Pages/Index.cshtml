@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var uniqueToppings = (List<string>)ViewData["uniques"];
    var uniquePizzas = (List<Pizza>)ViewData["uniquePies"];
}

<div class="text-center">
    <h1 class="display-4">Pizza Toppings Data</h1>
    <hr />
    <table border="1" width="40%" style="margin: 0px auto;">
        <tr>
            <th>Rank</th>
            <th>Most Common Toppings</th>
            <th>Count</th>
        </tr>
        @{
            int c = 0;
            foreach (string s in uniqueToppings)
            {
                c++;
                <tr>
                    <td>@c.</td>
                    <td>@s</td>
                    <td></td>
                </tr>
            }
        }
    </table>
    <br />
    <hr />
    <br />
    <table border="1" width="40%" style="margin: 0px auto;">
        <tr>
            <th>Rank</th>
            <th>Most Common Pizzas</th>
            <th>Count</th>
        </tr>
        @{
            int x = 1;
            for (int i = 0; i < 20; i++)
            {
                <tr>
                    <td>@x.</td>
                    @*<td>@uniquePizzas[i]</td>*@
                    <td></td>
                </tr>
                x++;
            }
        }
    </table>
</div>
